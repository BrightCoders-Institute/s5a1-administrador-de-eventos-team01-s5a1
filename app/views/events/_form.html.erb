<%= form_with model: event do |form| %> 
  <% if form.object.errors.any? %>
    <div>
      <% form.object.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  <% end %>

  <div style="margin-bottom: 15px">
    <%= form.label :title, 'Title', style: "display: block" %>
    <%= form.text_field :title%>
  </div>

  <div style="margin-bottom: 15px">
    <%= form.label :description, 'Description', style: "display: block" %>
    <%= form.text_area :description %> 
  </div>

  <div style="margin-bottom: 15px">
    <%= form.label :date, 'Date', style: "display: block" %>
    <%= form.datetime_local_field  :date %>
  </div>

  <div style="margin-bottom: 15px">
    <%= form.label :location, 'Location', style: "display: block" %>
    <%= form.text_field :location %> 
  </div>

  <div style="margin-bottom: 15px">
    <%= form.label :price, 'Price', style: "display: block" %>
    <%= form.number_field :price, step: 0.01  %>
  </div> 
    
  <%= form.submit style: "margin-bottom: 15px" %> 
<% end %>
