<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div>
    <div><%= f.label :username, class: 'font-bold text-x'%></div>
    <%= f.text_field :username, autofocus: true, class: 'rounded mb-4' %>
  </div>

  <div>
    <div><%= f.label :email, class: 'font-bold text-x'%></div>
    <%= f.email_field :email, autofocus: true, class: 'rounded mb-4', autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class='mb-4'>
    <div class='font-bold text-x'>
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
    </div>
    
    <div>
      <div><%= f.password_field :password, class: 'rounded', autocomplete: "new-password" %></div>
      <% if @minimum_password_length %>
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>
  </div>

  <div>
    <div><%= f.label :password_confirmation, class: 'font-bold text-x' %></div>
    <%= f.password_field :password_confirmation, class: 'rounded mb-4', autocomplete: "new-password" %>
  </div>

  <div>
    <div class='font-bold text-x'>
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i>
    </div>
    <%= f.password_field :current_password, class: 'rounded mb-6', autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: 'btn_log' %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<div>
  Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, 
  method: :delete, class: 'btn_log mt-4' %>
</div>
