<div class="flex items-center justify-center">
  <div class= "shadow-md rounded-md w-96">
    <div class="flex justify-center">
      <h2>Sign up</h2>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'w-full' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :username, class: 'block font-bold text-sm mb-1' %>
        <%= f.text_field :username, autofocus: true, class: 'rounded w-full px-3 py-2' %>
      </div>

      <div class="mb-4">
        <%= f.label :email, class: 'block font-bold text-sm mb-1' %>
        <%= f.email_field :email, autofocus: true, class: 'rounded w-full px-3 py-2', autocomplete: "email" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: 'block font-bold text-sm mb-1' %>
        <em class="text-xs text-gray-600">(6 characters minimum)</em>
        <%= f.password_field :password, autocomplete: "new-password", class: 'rounded w-full px-3 py-2' %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, class: 'block font-bold text-sm mb-1' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'rounded w-full px-3 py-2 border focus:outline-none focus:border-blue-500' %>
      </div>
  </div>
</div>

  <div class="flex items-center justify-center flex-col actions">

    <%= render "devise/shared/links" %>

    <%= f.submit "Sign up", class: 'btn_log' %>
  </div>

<% end %>
