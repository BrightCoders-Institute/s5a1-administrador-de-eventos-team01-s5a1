<div class="flex items-center justify-center" >
  <h2>Sign up</h2>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="flex items-center justify-center">  
    <div class="flex flex-col items-center">

      <%= render "devise/shared/error_messages", resource: resource%>

      <div>
        <div><%= f.label :username, class: 'font-bold text-x'%></div>
        <%= f.text_field :username, autofocus: true, class: 'rounded mb-4' %>
      </div>

      <div>
        <div><%= f.label :email, class: 'font-bold text-x'%></div>
        <%= f.email_field :email, autofocus: true, class: 'rounded mb-4',  autocomplete: "email" %>
      </div>

      <div>
        <div>
          <%= f.label :password, class: 'font-bold text-x' %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> chars minimum)</em>
          <% end %>
        </div>
        <%= f.password_field :password, autocomplete: "new-password", class: 'rounded mb-4' %>
      </div>

      <div>
        <div><%= f.label :password_confirmation, class: 'font-bold text-x' %></div>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'rounded mb-4' %>
      </div>

      <%= render "devise/shared/links" %>

      <div class="actions mt-3">
        <%= f.submit "Sign up", class: 'btn_log' %>
      </div>
    </div>
  </div>
<% end %>
