<div class="flex items-center justify-center">
  <div class= "shadow-[0_3px_10px_rgb(0,0,0,0.2)] rounded-md w-96 p-7">
    <div class="flex justify-center">
      <h2 class="mt-0">Log in</h2>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-6">
        <%= f.label :email , class: 'font-bold text-x'%>
        <%= f.email_field :email, autofocus: true, class: 'rounded w-full' ,autocomplete: "email" %>
      </div>
        
      <div class="mb-6 text-left">
        <%= f.label :password ,class: 'font-bold text-x mb-2' %>
        <%= f.password_field :password, class: 'rounded w-full', autocomplete: "current-password" %>
      </div>
    
      <% if devise_mapping.rememberable? %>
        <div class="flex items-center mb-4">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me , class: 'font-bold text-start text-x ml-2' %>
        </div>
      <% end %>

      <div class="flex items-center justify-center flex-col actions">
        <%= render "devise/shared/links" %>
        <%= f.submit "Log in" , class: 'btn_log mt-3' %>
      </div>
    <% end %>
  </div>
</div>
