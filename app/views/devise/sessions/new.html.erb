<div class="flex items-center justify-center" >
  <h2 class="text-red">Log in</h2>
</div>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="flex items-center justify-center">  
    <div class="flex flex-col items-center">
      
      <div>
        <%= f.label :email ,class: 'font-bold text-x'%><br />
        <%= f.email_field :email, autofocus: true, class: 'rounded mb-4' ,autocomplete: "email" %>
      </div>

      <div>
        <%= f.label :password ,class: 'font-bold text-x' %><br />
        <%= f.password_field :password, class: 'rounded mb-4', autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4" >
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me , class: 'font-bold text-x '%>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

      <div>
        <%= f.submit "Log in" , class: 'btn_log' %>
      </div>

    </div>
  </div>
<% end %>