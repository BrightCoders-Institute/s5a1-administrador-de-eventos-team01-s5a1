<div class="flex items-center justify-center">
  <div class= "shadow-[0_3px_10px_rgb(0,0,0,0.2)] rounded-md w-96 p-7">
    <div class="flex justify-center">
      <h2 class="mt-0 text-center">Forgot your password?</h2>
    </div>
    
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="flex items-center justify-center">  
        <div class="flex flex-col items-center">  
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="w-full mb-4">
            <div><%= f.label :email, class: 'font-bold text-x' %></div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'rounded w-full mb-4' %>
          </div>

          <div class="flex items-center justify-center flex-col actions">
            <%= render "devise/shared/links" %>
            <%= f.submit "Send instructions", class: 'btn_log mt-3' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
